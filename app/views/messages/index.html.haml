.chatspace__right
  .chatspace__right__top
    .chatspace__right__top__left
      .chatspace__right__top__left__top1character
        = @group.name
      .chatspace__right__top__left__member member
    .chatspace__right__top__right
      .chatspace__right__top__right__edit
        %p.chatspace__right__top__right__edit__hole
        =link_to "Edit", edit_group_path(@group)
  .chatspace__right__bottom
    .chatspace__right__bottom__message
      = render partial: 'common/message'
    = form_for @message, url: {action: "create"} do |f|
      .chatspace__right__bottom__mostbox
        .chatspace__right__bottom__mostbox__messagebox
          %i.fa.fa-file-picture-o
          %p.chatspace__right__bottom__mostbox__messagebox__type
            = f.text_field :body, placeholder: "type a message"
        .chatspace__right__bottom__mostbox__sendbox
          %p.chatspace__right__bottom__mostbox__sendbox__sendbutton
            = f.submit "Send"
